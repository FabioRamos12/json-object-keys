{
  "compilerOptions": {
    "target": "esnext",
    "module": "es2020",
    "rootDir": "src",
    "baseUrl": "src",
    "allowJs": true,
    "outDir": "dist",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "isolatedModules": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
